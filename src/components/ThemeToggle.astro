<button
  id="theme-toggle"
  class="theme-toggle"
  title="Toggle theme"
  aria-label="Toggle theme"
>
  <svg class="sun-icon" width="24" height="24" viewBox="0 0 24 24">
    <path fill="currentColor" d="M12 18a6 6 0 1 1 0-12 6 6 0 0 1 0 12zm0-2a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM11 1h2v3h-2V1zm0 19h2v3h-2v-3zM3.515 4.929l1.414-1.414L7.05 5.636 5.636 7.05 3.515 4.93zM16.95 18.364l1.414-1.414 2.121 2.121-1.414 1.414-2.121-2.121zm2.121-14.85l1.414 1.415-2.121 2.121-1.414-1.414 2.121-2.121zM5.636 16.95l1.414 1.414-2.121 2.121-1.414-1.414 2.121-2.121zM23 11v2h-3v-2h3zM4 11v2H1v-2h3z"/>
  </svg>
  <svg class="moon-icon" width="24" height="24" viewBox="0 0 24 24">
    <path fill="currentColor" d="M11.38 2.019a7.5 7.5 0 1 0 10.6 10.6C21.662 17.854 17.316 22 12.001 22 6.477 22 2 17.523 2 12c0-5.315 4.146-9.661 9.38-9.981z"/>
  </svg>
</button>

<style>
  .theme-toggle {
    background: none;
    border: none;
    padding: var(--space-2);
    cursor: pointer;
    color: var(--text-primary);
    transition: color var(--transition-base);
  }

  .theme-toggle:hover {
    color: var(--accent-2);
  }

  .sun-icon,
  .moon-icon {
    display: none;
  }

  [data-theme="light"] .sun-icon,
  [data-theme="dark"] .moon-icon {
    display: block;
  }
</style>

<script>
  const themeToggle = document.getElementById('theme-toggle');
  const prefersDark = window.matchMedia('(prefers-color-scheme: dark)');
  
  // Initialize theme
  const theme = localStorage.getItem('theme') || 
    (prefersDark.matches ? 'dark' : 'light');
  document.documentElement.setAttribute('data-theme', theme);
  
  themeToggle?.addEventListener('click', () => {
    const currentTheme = document.documentElement.getAttribute('data-theme');
    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
    
    document.documentElement.setAttribute('data-theme', newTheme);
    localStorage.setItem('theme', newTheme);
  });
</script>